<div class="card">
  <img class="card__img" src="{{this.image_url}}" alt="{{this.name}}" />
  <div class="card__footer">
    <div class="card__name">{{this.name}}</div>
    <div class="card__button-zone">
      {{#if this.isArtist}}
        <a class="button" href="/albums/{{id}}">View Albums</a>
      {{else}}
        <a class="button" href="/tracks/{{id}}">View Tracks</a>
      {{/if}}
    </div>
  </div>
</div>
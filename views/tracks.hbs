<section class="tracks container">
  <h2>Tracks for {{search}}</h2>
  {{#if tracks}}
    <table class="tracks__table">
      <thead>
        <tr>
          <th class="track__h-title">Title</th>
          <th class="track__h-listen">Listen</th>
        </tr>
      </thead>
      <tbody>
        {{#each tracks}}
          <tr>
            <td class="track__name">{{this.name}}</td>
            <td class="track__audio"><figure><audio controls src="{{this.preview_url}}">
                  <a href="{{this.preview_url}}">
                    Download audio
                  </a></audio></figure></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}

</section>